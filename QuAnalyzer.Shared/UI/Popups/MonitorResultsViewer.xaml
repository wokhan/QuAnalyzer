<Page
    x:Class="QuAnalyzer.UI.Popups.MonitorResultsViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:UC="using:QuAnalyzer.UI.Controls"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Background="{ThemeResource CardBackgroundFillColorDefault}" Margin="10" CornerRadius="10">
            <TextBlock Text="{x:Bind x:String.Format('Test case: {0}', Results.Step.Name),Mode=OneWay}" />
            <TextBlock Text="{x:Bind x:String.Format(x:Null, 'Source: {0} - {1}', Results.Step.Provider.Name, Results.Step.Repository),Mode=OneWay}" />
            <TextBlock Text="{x:Bind x:String.Format('Status: {0}', Results.Status),Mode=OneWay}" />
            <TextBlock Text="{x:Bind x:String.Format('Duration: {0}ms', Results.Duration),Mode=OneWay}" />
        </StackPanel>
        <UC:ExtendedDataGridView Grid.Row="1" ItemsSource="{x:Bind Results.Data, Mode=OneWay}" EnableAdvancedFilters="True" />
    </Grid>
</Page>
