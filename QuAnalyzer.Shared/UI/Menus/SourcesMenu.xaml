<UserControl x:Class="QuAnalyzer.UI.Menus.SourcesMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:quanalyzer="using:QuAnalyzer"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:contracts="using:Wokhan.Data.Providers.Contracts"
             mc:Ignorable="d" d:DesignHeight="460"
      x:Name="me">
    <Grid Background="{ThemeResource SystemControlAltMediumLowAcrylicWindowMediumBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Margin="10,0,0,0" VerticalAlignment="Center" Foreground="WhiteSmoke" Text="SOURCES" FontSize="12">
            <TextBlock.Resources>
                <Style TargetType="Control">
                    <Setter Target="Background" Value="Gray" />
                </Style>
            </TextBlock.Resources>
        </TextBlock>
        <CommandBar>
            <AppBarButton Content="Add..." Command="{x:Bind SourceNewCommand}" BorderBrush="Green" Icon="Add" />
            <!--<Button Content="Import..." Command="{Binding ProviderImportCommand}" IsEnabled="False" BorderBrush="Blue" ext:CustomAdorner.Image="{iconPacks:Material Kind=Import}"/>-->
        </CommandBar>
        <TreeView Grid.Row="2" ItemsSource="{x:Bind quanalyzer:App.Instance.CurrentProject.CurrentProviders}">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup>
                    <VisualState>
                        <VisualState.StateTriggers>
                            <StateTrigger IsActive="{Binding HasItems}" />
                        </VisualState.StateTriggers>
                        <VisualState.Setters>
                            <Setter Target="Focusable" Value="False" />
                            <Setter Target="Tag" Value="{Binding}" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState>
                        <VisualState.StateTriggers>
                            <StateTrigger IsActive="{Binding HasItems}" />
                        </VisualState.StateTriggers>
                        <VisualState.Setters>
                            <Setter Target="Template">
                                <Setter.Value>
                                    <ControlTemplate>
                                        <TextBlock Padding="10" TextWrapping="Wrap" Text="Please start by adding a new source." FontStyle="Italic" />
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <TreeView.ItemTemplate>
                <DataTemplate x:DataType="contracts:IDataProvider">
                    <TreeViewItem ItemsSource="{Binding Values,ElementName=me}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Image HorizontalAlignment="Center" Grid.Column="0" Height="32" VerticalAlignment="Center" Margin="2" MaxHeight="20" Source="{x:Bind Definition.IconPath}" />
                            <!--, Converter={StaticResource imageSourceConverter}}-->
                            <TextBlock HorizontalAlignment="Left" Grid.Column="1" Margin="5" TextWrapping="Wrap" Text="{x:Bind Name}" VerticalAlignment="Center" />
                            <AppBarButton Grid.Column="2" x:Name="btnEditProvider" Foreground="RoyalBlue" CommandParameter="{x:Bind}" Command="{Binding ProviderEdit,ElementName=me}" Icon="Edit" />
                        </Grid>
                    </TreeViewItem>
                </DataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
